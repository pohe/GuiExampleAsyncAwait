<Window x:Class="GuiExampleAsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Synchronous vs. asynchronius methods: async + await" Height="350" Width="525">

    <StackPanel Orientation="Vertical">
        <Border BorderThickness="2" BorderBrush="Black">
            <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                <TextBox Name="Input" Text="Not Used" MinWidth="100" Margin="10,10,10,10"/>
                <Button Content="Do it! Sync" Click="ButtonDoItSyncClicked" Margin="10,10,10,10"/>
                <Button Content="Clear" Click="ButtonClearClicked"  Margin="10,10,10,10"/>
                <Button Content="Do It! Async" Click="ButtonDoItAsyncClicked" Margin="10,10,10,10"/>
            </StackPanel>
        </Border>
        <Label Name="OutputLabel" Content="Output" Margin="10,10,10,10" />
    </StackPanel>
</Window>
